ENTRY(Reset_Handler)

MEMORY
{
  FLASH (rx) : ORIGIN = 0x08000000,   LENGTH = 512K
  RAM  (xrw) : ORIGIN = 0x20000000,   LENGTH = 128K
}

SECTIONS
{
  .text :
  {
  	. = ALIGN(4);
  	
    *(.isr_vector)
    *(.text)
    *(.rodata)
    
    . = ALIGN(4);
    _etext = .;
  }> FLASH
  
  .data :
  {
  	. = ALIGN(4);
  	
  	_sdata = .; /* Start of data on VMA i.e; SRAM */
  	*(.data)
  	
  	. = ALIGN(4);
  	_edata = .;
  }> RAM AT> FLASH
  
  .bss :
  {
  	. = ALIGN(4);
  	
    _sbss = .;
  	*(.bss)
  	*(COMMON)
  	
  	. = ALIGN(4);
  	_ebss = .;
  }> RAM
}